<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="20dp">


    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rgGenero"
            android:gravity="center">
        <RadioButton
                android:text="@string/femenino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rbFemenino" android:layout_weight="1"
                android:textSize="18sp" android:padding="20dp"/>
        <RadioButton
                android:text="@string/masculino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rbMasculino" android:layout_weight="1"
                android:textSize="18sp" android:padding="20dp"/>
    </RadioGroup>

</LinearLayout>