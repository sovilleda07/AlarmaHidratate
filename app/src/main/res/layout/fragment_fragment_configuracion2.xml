<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".Fragments.FragmentConfiguracion"
                                             android:id="@+id/frameLayout2">

    <TextView
            android:text="@string/genero"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/tvGeneroUsuario" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.102"
            app:fontFamily="@font/roboto" android:textSize="22sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tvGenero"
            android:clickable="true" android:focusable="true"/>
    <TextView
            android:text="@string/genero"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:id="@+id/tvGenero" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.098" android:textStyle="bold"
            app:fontFamily="@font/montserrat_bold" android:textSize="24sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tvPesoUsuario"/>
    <TextView
            android:text="@string/lb"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:fontFamily="@font/roboto" android:textSize="22sp"
            android:layout_marginEnd="248dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="248dp"
            android:id="@+id/tvLibras" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPeso"/>
    <TextView
            android:text="@string/libras"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:fontFamily="@font/roboto" android:textSize="22sp"
            android:layout_marginStart="36dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPeso"
            android:id="@+id/tvPesoUsuario" android:clickable="true"
            android:focusable="true"/>
    <TextView
            android:text="@string/alarma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAlarma" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:textStyle="bold"
            app:fontFamily="@font/montserrat_bold" android:textSize="24sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tvNotificaciones"/>
    <TextView
            android:text="@string/notificaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNotificaciones"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.081" android:textColor="@color/colorPDark"
            app:fontFamily="@font/montserrat_bold" android:textStyle="bold" android:textSize="24sp"
            android:layout_marginTop="364dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/peso"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:id="@+id/tvPeso" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.084" android:textStyle="bold"
            app:fontFamily="@font/montserrat_bold" android:textSize="24sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tvNombreUsuario"/>
    <TextView
            android:text="@string/nombre"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/tvNombreUsuario" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.094"
            app:fontFamily="@font/roboto" android:textSize="22sp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNombre"
            android:clickable="true" android:focusable="true"/>
    <TextView
            android:text="@string/general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvGeneral" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.053" android:textColor="@color/colorPDark"
            app:fontFamily="@font/montserrat_bold" android:textStyle="bold" android:textSize="24sp"/>
    <TextView
            android:text="@string/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNombre" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.103" android:textStyle="bold"
            app:fontFamily="@font/montserrat_bold" android:textSize="24sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvGeneral"/>
    <Button
            android:text="@string/frecuencia"
            android:layout_width="119dp"
            android:layout_height="36dp"
            android:id="@+id/btnAlarma"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/tvAlarma" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.509"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNotificaciones"/>
</android.support.constraint.ConstraintLayout>