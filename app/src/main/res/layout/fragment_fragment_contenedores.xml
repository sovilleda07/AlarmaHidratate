<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".Fragments.FragmentContenedores"
                                             android:id="@+id/Contenedores"
                                             android:orientation="vertical">

    <Button
            android:text="@string/cambiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bCambiarTaza"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/etTaza" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/bCambiarVaso" app:layout_constraintHorizontal_bias="0.58"/>
    <Button
            android:text="@string/cambiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bCambiarBotella"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/bCambiarTaza" app:layout_constraintStart_toEndOf="@+id/etVaso"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="83dp"
            android:layout_height="43dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/etBotella"
            android:hint="@string/contenedor"
            android:autofillHints="no"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/tvContenedores" app:layout_constraintStart_toEndOf="@+id/ivVaso"
            android:layout_marginStart="16dp" android:layout_marginLeft="16dp"/>
    <EditText
            android:layout_width="83dp"
            android:layout_height="43dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/etTaza"
            android:hint="@string/contenedor"
            android:autofillHints="no"
            app:layout_constraintStart_toEndOf="@+id/ivTaza"
            android:layout_marginStart="20dp" android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/etBotella"/>
    <TextView
            android:text="@string/text_contenedores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvContenedores" android:textSize="24sp"
            app:fontFamily="@font/roboto" android:textStyle="bold" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
    <ImageView
            android:src="@drawable/vaso"
            android:layout_width="113dp"
            android:layout_height="105dp"
            android:id="@+id/ivVaso"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            android:contentDescription="@string/contenedor"
            android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:layout_width="83dp"
            android:layout_height="43dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/etVaso"
            android:hint="@string/contenedor"
            android:autofillHints="no"
            android:focusable="auto" android:layout_marginTop="104dp"
            app:layout_constraintTop_toBottomOf="@+id/etTaza" app:layout_constraintStart_toEndOf="@+id/ivBotella"
            android:layout_marginStart="20dp" android:layout_marginLeft="20dp"/>
    <ImageView
            android:src="@drawable/taza"
            android:layout_width="113dp"
            android:layout_height="105dp"
            android:id="@+id/ivTaza" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/ivVaso"
            android:contentDescription="@string/contenedor"/>
    <ImageView
            android:src="@drawable/botella"
            android:layout_width="113dp"
            android:layout_height="105dp"
            android:id="@+id/ivBotella" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/ivTaza"
            android:contentDescription="@string/contenedor"/>
    <Button
            android:text="@string/cambiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bCambiarVaso" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="116dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/etBotella"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvnumero" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/ivVaso"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/bCambiarVaso" app:layout_constraintHorizontal_bias="0.51"/>

</android.support.constraint.ConstraintLayout>