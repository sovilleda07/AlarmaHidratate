<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DatosGenerales"
        android:id="@+id/constraintLayout">
        <!--android:background="@drawable/fondologin"-->

    <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp" app:srcCompat="@drawable/baseline_account_circle_black_36"
            android:id="@+id/ivUsuario"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/etCorreo"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.512"
            android:contentDescription="@string/icono"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp" app:srcCompat="@drawable/baseline_lock_black_36"
            android:id="@+id/ivContrasena" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/ivUsuario" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/etContrasena" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.512"
            android:contentDescription="@string/icono"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp" app:srcCompat="@drawable/baseline_person_black_36"
            android:id="@+id/ivNombre" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/ivContrasena" app:layout_constraintEnd_toStartOf="@+id/etNombre"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.571"
            android:contentDescription="@string/icono"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp" app:srcCompat="@drawable/baseline_fastfood_black_36"
            android:id="@+id/ivPeso" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/ivNombre" app:layout_constraintEnd_toStartOf="@+id/etPeso"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.571"
            android:contentDescription="@string/icono"/>
    <TextView
            android:text="@string/registrarse"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:id="@+id/tvRegistrarse" android:textStyle="bold"
            android:textSize="24sp" android:textColor="@color/colorDivider"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.502" app:fontFamily="@font/montserrat_bold"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etCorreo"
            android:hint="@string/correo"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRegistrarse" android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="40dp"
            android:selectAllOnFocus="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etContrasena"
            android:hint="@string/contrasena"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/etCorreo" android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="40dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etPeso"
            android:hint="@string/ingresePeso"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/etNombre" android:layout_marginEnd="44dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="44dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etNombre"
            android:hint="@string/nombre"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/etContrasena" android:layout_marginEnd="44dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="44dp"/>
    <Button
            android:text="@string/aceptar"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:id="@+id/bAceptar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/rgGenero" app:layout_constraintHorizontal_bias="0.502"
            android:textSize="18sp"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rgGenero"
            android:orientation="horizontal"
            android:gravity="center" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/etPeso" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp">
        <RadioButton
                android:text="@string/femenino"
                android:layout_width="116dp"
                android:layout_height="wrap_content" android:id="@+id/rbFemenino" android:layout_weight="1"
                android:textSize="18sp"/>
        <RadioButton
                android:text="@string/masculino"
                android:layout_width="131dp"
                android:layout_height="wrap_content" android:id="@+id/rbMasculino" android:layout_weight="1"
                android:textSize="18sp"/>
    </RadioGroup>


</android.support.constraint.ConstraintLayout>